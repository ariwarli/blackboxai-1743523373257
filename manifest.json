{
  "manifest_version": 3,
  "name": "TabFlow",
  "version": "1.0.0",
  "description": "A modern, minimal tab management extension for efficient workflow",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "128": "assets/icon.svg"
  }
}